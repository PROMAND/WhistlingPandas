<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addTask"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                style="@style/pageTitle"
                android:id="@+id/textView1"
                android:text="New task"
                 >
                <requestFocus />
            </TextView>

            <TextView
                    style="@style/label"
                    android:id="@+id/textView2"
                    android:text="Task title"
                    />
            <EditText
                style="@style/label"
                android:layout_width="fill_parent"
                android:id="@+id/title"
                android:selectAllOnFocus="false"/>

            <TextView
                    style="@style/label"
                    android:id="@+id/state"
                    android:text="State"
                    />

            <Spinner
                    android:id="@+id/stateSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"/>

            <TextView
                    style="@style/label"
                    android:id="@+id/assigneeText"
                    android:text="Assignee"
                    />
            <Spinner
                    android:id="@+id/assignee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="Assignee" />

            <TextView
                    style="@style/label"
                android:id="@+id/textView12"
                android:text="Deadline"
                />

            <DatePicker
                android:id="@+id/deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />


            <TextView
                    style="@style/label"
                    android:id="@+id/textView13"
                    android:text="Type"
                    />
            <Spinner
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Priority"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/label"/>

            <RadioGroup
                android:id="@+id/radioPriority"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal" >
                <!--
                <RadioButton
                    android:id="@+id/priorityLow"
                    style="@style/priorityValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="15dp"
                    android:text="Low" />
                <RadioButton
                    android:id="@+id/priorityMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:text="Medium"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/priorityHigh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High"
                    android:textSize="15dp" />
                   -->
            </RadioGroup>
            <TextView
                    style="@style/label"
                    android:id="@+id/textView2"
                    android:text="Description"
                    />
            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                style="@style/textArea"
            />

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    >

                <Button
                        android:id="@+id/save"
                        style="@style/button"
                        android:text="Save" />

                <Button
                        android:id="@+id/cancelAdd"
                        style="@style/button"
                        android:layout_alignParentRight="true"
                        android:text="Cancel" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>

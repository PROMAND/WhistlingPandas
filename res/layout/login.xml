<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_width="157dp"
            android:layout_height="133dp"
            android:id="@+id/imageView"
			android:layout_gravity="center"
            android:src="@drawable/loginpicture"
			android:layout_marginTop="10dp"/>
    
    <TextView
        	android:id="@+id/lblAccount"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Project Account:"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>
    
    <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtLoginField"
            android:layout_gravity="center"
            android:hint="LOGIN"
            android:textSize="19dp"/>
    
    <TextView android:layout_width="150dp"
        	  android:layout_height="40dp"
        	  android:text="Password:"
              android:id="@+id/lblPassword"
	          android:layout_gravity="center"
			  android:textSize="20dp"
              android:layout_marginTop="20dp"/>
    
    <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/txtPasswordField"
			android:layout_gravity="center"
			android:hint="PASSWORD"
			android:textSize="19dp"/>
    
    <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:id="@+id/login" android:layout_gravity="center" android:layout_marginTop="5dp"/>
</LinearLayout>
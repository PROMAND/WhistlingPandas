<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addTask"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <PreferenceCategory
            android:summary="Change settings"
            android:title="Settings" >
        <ListPreference
                android:id="@+id/currentProject"
                android:key="currentProject"
                android:summary=""
                android:title="" />

        <ListPreference
                android:id="@+id/updates"
                android:key="updates"
                android:summary="How frequent updates should be checked on server"
                android:title="Updates" />

        <CheckBoxPreference
                android:id="@+id/wifiUpdate"
                android:key="checkBox"
                android:summary="Update data only when Wifi connection is avalible"
                android:title="WiFi settings" />

        <CheckBoxPreference
                android:id="@+id/taskNotification"
                android:key="checkBox"
                android:summary="Notify when new task is added"
                android:title="Notifications" />


    </PreferenceCategory>
</PreferenceScreen >



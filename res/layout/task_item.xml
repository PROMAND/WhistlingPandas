<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" 
    android:background="#555"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:src="@drawable/bug" >
    </ImageView>

    <LinearLayout
        android:id="@+id/id_priority"
        android:layout_height="match_parent"
        android:orientation="vertical" 
    android:background="#000"
    
    
        android:layout_width="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
    >
    </LinearLayout>
    
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1" 
        android:layout_margin="0dp"
        >

    <TextView
        android:id="@+id/id_projectname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project name in here"
        android:textSize="30px"
         />

    <TextView
        android:id="@+id/id_assignee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assignee 1" 
            android:layout_below="@id/id_projectname"
            
        android:textSize="16px"
            />
    
    <TextView
        android:id="@+id/id_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11.11.2013" 
android:layout_alignParentRight="true"
android:layout_alignParentBottom="true"
        android:textSize="12px"
        />
    
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="pageTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textSize">50dp</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="taskTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_marginBottom">15dp</item>

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">12</item>
        <item name="android:textSize">40dp</item>
    </style>

    <style name="label" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">40dp</item>
    </style>


    <style name="button" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:textSize">40dp</item>
        <item name="android:layout_marginRight">60dp</item>
    </style>

</resources>